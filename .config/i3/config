include $HOME/.config/i3/workspaces.conf
include $HOME/.config/i3/rules.conf

set $mod Mod4
font pango:JetBrainsMono Nerd Font 12

# Color scheme matching tabbed/dwm setup
# class                 border  backgr. text    indicator child_border
set_from_resource $fg i3wm.color1
set_from_resource $bg i3wm.color0


# class                 border  backgr. text indicator child_border
client.focused          $fg     $fg     $bg  $fg       $fg
client.focused_inactive $bg     $bg     $fg  $bg       $bg
client.unfocused        $fg     $bg     $fg  $bg       $bg
client.urgent           $bg     $bg     $fg  $bg       $bg
client.placeholder      $bg     $bg     $fg  $bg       $bg

client.background       $bg

# PROTIP: You can also dynamically set dmenu's colors this way:
bindsym $mod+d exec dmenu_run -nb "$fg" -nf "$bg" -sb "$bg" -sf "$fg"

# Add padding to window titles
# for_window [class=".*"] title_format "  %title"

exec --no-startup-id setxkbmap -layout "us,ru" -option "grp:win_space_toggle"

exec_always --no-startup-id ~/.config/i3/scripts/autostart.sh


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

