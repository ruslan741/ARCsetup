# блютуз меню
super + ctrl + b
	~/.config/i3/scripts/bt-menu

# только задний фон
super + ctrl + shift + w
	~/.config/i3/scripts/onlybgmenu


# обои
super + ctrl + w
	~/.config/i3/scripts/wallpapermenu

# Launch Browser (Firefox)
super + b
	yandex-browser 

# Launch Private Browser (Firefox Incognito Mode)
super + shift + b
	firefox -private-window

# Launch Terminal (Wezterm)
super + Return
	wezterm

# Toggle Scratchpad Terminal
super + shift + Return
	~/.config/i3/scripts/scratchpad

# Launch Rofi Application Menu
super + t
   	rofi -show drun -modi drun -line-padding 4 -hide-scrollbar -show-icons -theme ~/.config/i3/rofi/config.rasi

# Launch File Manager (Thunar)
super + e
	thunar

# Launch GIMP (Image Editor)
super + g
	gimp

# Launch Pulsemixer (Audio Mixer)
super + v
	~/.config/i3/scripts/scratchpad pulsemixer pulsemixer

# Launch Discord
super + d
	Discord

# Launch OBS (Screen Recording/Streaming)
super + o
	obs

# Show Keybinding Help Script
super + slash
	~/.config/i3/scripts/help

# Shutdown or Reboot
super + x
	~/.config/i3/scripts/power

# Take a Screenshot (Region Select)
super + shift + p
	flameshot gui --path ~/Screenshots/

# Take a Fullscreen Screenshot
super + p
	flameshot full --path ~/Screenshots/

# Switch to Workspace 1
super + 1
	i3-msg workspace 1

# Switch to Workspace 2
super + 2
	i3-msg workspace 2

# Switch to Workspace 3
super + 3
	i3-msg workspace 3

# Switch to Workspace 4
super + 4
	i3-msg workspace 4

# Switch to Workspace 5
super + 5
	i3-msg workspace 5

# Switch to Workspace 6
super + 6
	i3-msg workspace 6

# Switch to Workspace 7
super + 7
	i3-msg workspace 7

# Switch to Workspace 8
super + 8
	i3-msg workspace 8

# Switch to Workspace 9
super + 9
	i3-msg workspace 9

# Switch to Workspace 10
super + 0
	i3-msg workspace 10

# Move to Workspace 1
super + shift + 1
	i3-msg move container to workspace number 1

# Move to Workspace 2
super + shift + 2
	i3-msg move container to workspace number 2

# Move to Workspace 3
super + shift + 3
	i3-msg move container to workspace number 3

# Move to Workspace 4
